<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".ui.dashboard.SearchFragment">

    <TextView
        android:id="@+id/artist_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Marvin Sapp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genre_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genre"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/artist_name_textview"
        app:layout_constraintTop_toBottomOf="@id/artist_name_textview" />

    <TextView
        android:id="@+id/dot_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="@string/u2022_bullet"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/genre_label"
        app:layout_constraintTop_toBottomOf="@id/artist_name_textview" />

    <TextView
        android:id="@+id/genre_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genre"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/dot_textview"
        app:layout_constraintTop_toBottomOf="@id/artist_name_textview" />

    <TextView
        android:id="@+id/artist_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genre"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/dark_gray"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/dot_textview"
        app:layout_constraintTop_toBottomOf="@id/artist_name_textview" />


</androidx.constraintlayout.widget.ConstraintLayout>